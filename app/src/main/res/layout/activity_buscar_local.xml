<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar Local"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"
            android:accessibilityHeading="true"/>

        <EditText
            android:id="@+id/edtBusca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite nome ou endereço"
            android:inputType="textPostalAddress|textCapWords"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnVoz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Falar nome do local"
            android:minHeight="56dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="Botão Falar nome do local. Use o microfone para pesquisar." />

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pesquisar"
            android:minHeight="56dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="Botão Pesquisar. Busca o texto digitado." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultados:"
            android:layout_marginBottom="8dp"
            android:importantForAccessibility="no" />

        <LinearLayout
            android:id="@+id/listaResultados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>
</ScrollView>